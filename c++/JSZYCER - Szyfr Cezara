string zam(string a)
{
    int d;
    string c;
    char b;
    for(int i=0;i<a.size();i++)
    {
    if(a[i]<64){b=' ';}else{d=int(a[i])+3;if(d>90){d=d-26;}b=char(d);}
    c=c+b;
    }
return(c);}
int main() {
